<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 1"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question1"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/answer1a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer 1a" />

        <RadioButton
            android:id="@+id/answer1b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer 1b" />

        <RadioButton
            android:id="@+id/answer1c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer 1c" />
    </RadioGroup>

    <TextView
        android:id="@+id/question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 2"
        android:textSize="18sp"
        android:layout_below="@id/radio_group"
        android:layout_marginTop="16dp"/>

    <RadioGroup
        android:id="@+id/radio_group2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question2"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/answer2a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer 2a" />

        <RadioButton
            android:id="@+id/answer2b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer 2b" />

        <RadioButton
            android:id="@+id/answer2c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer 2c" />
    </RadioGroup>

    <TextView
        android:id="@+id/question3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 3"
        android:textSize="18sp"
        android:layout_below="@id/radio_group2"
        android:layout_marginTop="16dp"/>

    <RadioGroup
        android:id="@+id/radio_group3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question3"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/answer3a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer 3a" />

        <RadioButton
            android:id="@+id/answer3b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer 3b" />

        <RadioButton
            android:id="@+id/answer3c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer 3c" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_below="@id/radio_group3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
